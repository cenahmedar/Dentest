                        Orientation="Horizontal">

                <Button Width="100" Margin="0 0 30 0"
                        Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Background="#f44336"
                        Foreground="White"
                        Content=" IPTAL"
                        Name="close"
                        Click="close_Click">
                    <Button.Resources>
                        <SolidColorBrush x:Key="SecondaryAccentBrush"
