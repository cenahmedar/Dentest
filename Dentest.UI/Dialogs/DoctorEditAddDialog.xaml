             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
             Name="mainWindow">
    <Grid>
        <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}"
                     HorizontalAlignment="Center"
                     Margin="16"
                     IsIndeterminate="True"
                     Value="0"
                     Name="progressBar"
                     Panel.ZIndex="1"
                     Visibility="Hidden" />



        <Grid Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="7*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>


            <StackPanel Grid.Row="0" HorizontalAlignment="Center"
                        Orientation="Vertical">

                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             VerticalAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             materialDesign:HintAssist.Hint="İsim"
                             Width="350"
                             Name="txName">
                    </TextBox>

                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             VerticalAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             materialDesign:HintAssist.Hint="Soyisim"
                             Width="350"
                             Name="txSurname"
                             Margin="20 0 0 0">
                    </TextBox>

                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="0 20 0 0">
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             VerticalAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             materialDesign:HintAssist.Hint="TC"
                             Width="350"
                             Name="txTc"
                             CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                             PreviewTextInput="NumberValidationTextBox">
                    </TextBox>

                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             VerticalAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             materialDesign:HintAssist.Hint="Telefon"
                             Width="350"
                             Name="txPhone"
                             Margin="20 0 0 0"
                             CommandManager.PreviewExecuted="textBox_PreviewExecuted"
                             PreviewTextInput="NumberValidationTextBox">
                    </TextBox>

                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            Orientation="Horizontal"
                            Margin="0 20 0 0"  >
                    <TextBox Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"
                             VerticalAlignment="Top"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             materialDesign:HintAssist.Hint="Adress"
                             Width="350"
                             Name="txAdress">
                    </TextBox>

                    <DatePicker Width="350"
                                materialDesign:HintAssist.Hint="Doğum Tarihi"
                                Style="{StaticResource MaterialDesignFilledDatePicker}" 
                                Margin="20 0 0 0"
                                Name="pickbirthDay"/>


